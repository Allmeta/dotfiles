[section/base]
include-file = $HOME/.config/polybar/master.conf
include-file = $HOME/.config/polybar/modules.conf

[bar/openbox-bar]
inherit = bar/master

; Use $ xrandr -q | grep " connected" | cut -d ' ' -f1
monitor = 
monitor-fallback = 

modules-left   = workspaces
modules-center = clock 
modules-right  = battery pulseaudio network

[bar/i3-bar]
inherit=bar/master
monitor =
monitor-fallback= 

tray-position = right
tray-padding = 2

modules-left = workspaces
modules-center = clock
modules-right = alsa backlight network battery

; Need to have backlight here, 
; didn't work when but in modules/
[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
format-prefix = "ï–¨ "
format-prefix-foreground = ${colors.magenta-alt}
format-underline = ${colors.magenta-alt}
label = %percentage%%
